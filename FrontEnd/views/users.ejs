<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos</title>
    <link rel="stylesheet" href="/css/admin.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200..1000;1,200..1000&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
  </head>
  <body>
    <div class="barSuccess"></div>
    <div class="back">
      <a href="/menu">
        <span class="material-symbols-rounded"> arrow_back </span></a
      >
    </div>
    <div class="iconsRigth">
      <span id="addUser" class="material-symbols-rounded"> person_add </span>
      <!-- <span class="material-symbols-rounded" id="logout"> logout </span> -->
    </div>
    <h1>Gesti√≥n de usuarios</h1>
    <div class="users">
      <table class="tableUsers">
        <thead>
          <tr>
            <th>Usuario</th>
            <th class="disguise">DNI</th>
            <th class="disguise">Nombres</th>
            <th class="disguise">Apellidos</th>
            <th>Permisos</th>
            <th class="iconTable">Editar</th>
            <th class="iconTable">Eliminar</th>
          </tr>
        </thead>
        <tbody id="dataUsuarios">
          <!-- contenido de la tabla en users.js -->
        </tbody>
      </table>
    </div>
    <div class="profile">
      <span class="material-symbols-rounded"> account_circle </span>
      <div>
        <h3 class="nameProfile">Nombre de usuario</h3>
        <p class="modeProfile">Modo Administrador</p>
      </div>
    </div>
    <!-- MODAL EXITO -->
    <div id="modalExito">
      <div class="close">
        <span class="material-symbols-rounded"> close </span>
      </div>
      <h3>Exito!</h3>
      <h4>Se cargaron xx de x</h4>
    </div>
    <!-- MODAL CREAR USUARIO -->
    <div id="modalAddUser">
      <div class="close">
        <span id="closeAddUser" class="material-symbols-rounded"> close </span>
      </div>
      <h3>Crear usuario</h3>
      <form action="" id="formAddUser">
        <input id="dni" type="text" placeholder="DNI" value="" />
        <input
          id="nombreUsuario"
          type="text"
          placeholder="Nombre de usuario"
          value=""
        />
        <input id="contrase√±a" type="text" placeholder="Contrase√±a" value="" />
        <input id="nombre" type="text" placeholder="Nombres" value="" />
        <input id="apellido" type="text" placeholder="Apellidos" value="" />
        <!-- <input type="text" placeholder="Permiso"> -->
        <select name="permission" id="permissionUAdd">
          <option value="default" selected disabled>Elige permiso</option>
          <option value="administrador">Administrador</option>
          <option value="operador">Operador</option>
        </select>
        <button id="userCreate">Crear</button>
      </form>
    </div>
    <!-- MODAL ACTUALIZAR USUARIO -->
    <div id="modalUpdateUser">
      <div class="close">
        <span id="closeUpdateUser" class="material-symbols-rounded">
          close
        </span>
      </div>
      <h3>Actualizar usuario</h3>
      <form action="" id="formUpdateUser">
        <select name="permission" id="permissionUUpdate">
          <option value="administrador">Administrador</option>
          <option value="operador">Operador</option>
        </select>
        <input id="updateNombres" type="text" placeholder="Nombres" />
        <input id="updateApellidos" type="text" placeholder="Apellidos" />
        <input id="updateConrese√±a" type="password" placeholder="Contrase√±a" />
        <button type="button" id="showPassword">üëÅÔ∏è</button>
        <button id="userUpdate" type="submit">Actualizar</button>
      </form>
    </div>
    <!-- MODAL ELIMINAR USUARIO -->
    <div id="modalDeleteUser">
      <h3>¬øDeseas eliminar usuario?</h3>
      <div class="boxButtonDelete">
        <div class="boxNoDelete error">
          <h3>No</h3>
        </div>
        <div class="boxYesDelete check">
          <h3>Si</h3>
        </div>
      </div>
    </div>
    <div id="overlay"></div>
  </body>
  <script src="/js/users.js"></script>
</html>
